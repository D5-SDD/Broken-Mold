{
  "name": "broken-mold",
  "productName": "Broken Mold",
  "description": "Dungeons & Dragons companion application",
  "author": "D5",
  "version": "0.1.0",
  "main": "./bin/main.js",
  "scripts": {
    "build": "npm run build:dev",
    "build:dev": "cross-env NODE_ENV=dev webpack --progress --colors",
    "build:dist": "cross-env NODE_ENV=dist webpack --progress --colors --bail",
    "clean": "rm -rf ./dist && rm -rf ./bin",
    "package": "npm run clean && npm run build:dist && npm run package:win",
    "package:win": "electron-packager bin BrokenMold --out=dist --platform=win32 --arch=all",
    "start": "cross-env NODE_ENV=development electron .",
    "watch": "cross-env NODE_ENV=development webpack --progress --colors --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/D5-SDD/broken-mold.git"
  },
  "bugs": {
    "url": "https://github.com/D5-SDD/broken-mold/issues"
  },
  "homepage": "https://github.com/D5-SDD/broken-mold#readme",
  "dependencies": {
    "electron": "^1.4.3",
    "electron-context-menu": "^0.6.0",
    "electron-prebuilt": "^1.4.1",
    "electron-reload": "^1.0.2",
    "ip": "^1.1.4",
    "jquery": "^3.1.1",
    "json-socket": "^0.2.0",
    "lodash": "^4.16.1",
    "react": "^15.3.2",
    "react-bootstrap": "^0.30.5",
    "react-dom": "^15.3.2",
    "react-icons": "^2.2.1",
    "react-notification-system": "^0.2.10",
    "react-tree-menu": "^1.5.0",
    "to-capital-case": "^1.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.17.0",
    "babel-loader": "^6.2.5",
    "babel-polyfill": "^6.0.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^3.1.3",
    "css-loader": "^0.25.0",
    "electron-builder": "^8.6.0",
    "electron-packager": "^8.3.0",
    "eslint": "^3.6.1",
    "eslint-plugin-react": "^6.3.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "json-loader": "^0.5.4",
    "node-sass": "^3.13.0",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.2",
    "webpack-target-electron-renderer": "^0.4.0",
    "webpack-validator": "^2.2.9"
  }
}
